+                hdrlen = x->props.header_len - IPV4_BEET_PHMAXLEN;
+                skb_push(skb, hdrlen);
+                iphv6 = skb->nh.ipv6h;
+                
+                skb->nh.raw = skb->data;
+                top_iphv6 = skb->nh.ipv6h;
