<binding id="statusbarpanel" display="xul:button">
<content>
	<xul:popup id="showip_ipmenu" onpopupshowing="showipExt.AddIPItems(this);" position="after_start">
		<xul:menuitem id="showip_currentip" label="0.0.0.0" disabled="true"/>
		<xul:menuseparator/>
		<xul:menuitem label="&copytoclipboard;" oncommand="showipExt.copytoclip(showipExt.gethostip());"/>
	</xul:popup>

	<!-- left mouse button - query by name -->
	<xul:popup id="showip_hostmenu" onpopupshowing="showipExt.AddHostItems(this);" position="after_start">
		<xul:menuitem id="showip_currenthost" label="world" disabled="true"/>
		<xul:menuseparator/> 
		<xul:menuitem label="&copytoclipboard;" oncommand="showipExt.copytoclip(showipExt.gethostname());"/>
	</xul:popup>
<!--	
<xul:popup id="iii_test">
