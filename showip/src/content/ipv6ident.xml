</xul:popup>
-->
<xul:spacer flex="1"/>
<xul:label id="showip_status_text" value="ShowIP" class="statusbarpanel-text" popup="showip_hostmenu" context="showip_ipmenu"/>
<xul:spacer flex="1"/>
</content>

