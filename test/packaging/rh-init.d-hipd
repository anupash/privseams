#!/bin/bash
#
# Init file for hip daemon
#
# description: HIPL IPsec key and mobility management daemon
#
# processname: hipd
# pidfile: /var/run/hipd.pid
# chkconfig: 2345 15 85

# source function library
. /etc/rc.d/init.d/functions

# pull in sysconfig settings
[ -f /etc/sysconfig/hipd ] && . /etc/sysconfig/hipd

RETVAL=0
DAEMON="/usr/sbin/hipd"
BASENAME="hipd"

PID_FILE=/var/run/hipd.pid
LOCK_FILE=/var/lock/subsys/hipd
OPTIONS="-b"

start()
{
	echo -n $"Starting $BASENAME:"
	initlog -c "$DAEMON $OPTIONS" && success || failure
	RETVAL=$?
	[ "$RETVAL" = 0 ] && touch $LOCK_FILE
	echo
}

stop()
{
	echo -n $"Stopping $BASENAME:"
	if [ -n "`pidfileofproc $DAEMON`" ] ; then
	    killproc $DAEMON -TERM
	else
	    failure $"Stopping $BASENAME"
	fi
	RETVAL=$?
	[ "$RETVAL" = 0 ] && rm -f $LOCK_FILE
	echo
}

reload()
{
	echo -n $"Reloading $BASENAME:"
	if [ -n "`pidfileofproc $DAEMON`" ] ; then
	    killproc $DAEMON -HUP
	else
	    failure $"Reloading $BASENAME"
	fi
	RETVAL=$?
	echo
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		stop
		start
		;;
	reload)
		reload
		;;
	condrestart)
		if [ -f $LOCK_FILE ] ; then
			if [ "$RETVAL" = 0 ] ; then
				stop
				# avoid race
				sleep 3
				start
			fi
		fi
		;;
	status)
		status $DAEMON
		RETVAL=$?
		;;
	*)
		echo $"Usage: $0 {start|stop|restart|reload|condrestart|status}"
		RETVAL=1
esac
exit $RETVAL
