#! /bin/sh
# /etc/init.d/hipfw: start and stop the HIP hipfw

#hipfw="/usr/sbin/hipfw"
#OPTIONS="-bk"

HIPFW_OPTS="-bkl"
#PIDFILE=/var/run/hipfw.pid
PID=`pidof -o $$ hipfw`

set -e

test -x /usr/sbin/hipfw || exit 0

if test -f /etc/default/hipfw; then
    . /etc/default/hipfw
fi

#export PATH="${PATH:+$PATH:}/usr/sbin:/sbin"

stop_hipfw() {
    # Ensure that we don't try to kill init.d script itself
    #start-stop-hipfw --stop --quiet --oknodo --retry 30
    if [ $PID ]
    then
	kill $1 $PID
    fi
}

case "$1" in
  start)
        echo -n "Starting hipfw"
	start-stop-daemon --start --quiet --exec /usr/sbin/hipfw -- $HIPFW_OPTS
	#`sudo /usr/sbin/hipfw $HIPFW_OPTS`
        echo "."
	;;
  stop)
        echo -n "Stopping hipfw"
	stop_hipfw
        echo "."
	;;

  *)
	echo "Usage: /etc/init.d/hipfw {start|stop}"
	exit 1
esac

exit 0
