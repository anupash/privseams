#!/bin/bash
#
# Init file for hip dns proxy
#
# description: HIP DNS proxy
#
# processname: dnsproxy.py
# pidfile: /var/run/dnsproxy.pid
# chkconfig: 2345 21 79

# source function library
. /etc/rc.d/init.d/functions

# pull in sysconfig settings
[ -f /etc/sysconfig/dnsproxy ] && . /etc/sysconfig/dnsproxy

RETVAL=0
DNSPROXY="/usr/sbin/dnshipproxy"
BASENAME="dnsproxy"

#PID_FILE=/var/run/dnsproxy.pid
LOCK_FILE=/var/lock/subsys/dnshipproxy
OPTIONS="-bk"

start()
{
	echo -n $"Starting $BASENAME:"
	$DNSPROXY $OPTIONS && success || failure
	RETVAL=$?
	[ "$RETVAL" = 0 ] && touch $LOCK_FILE
	echo
}

stop()
{
	echo -n $"Stopping $BASENAME:"
	killall $BASENAME
	RETVAL=$?
	[ "$RETVAL" = 0 ] && rm -f $LOCK_FILE
	echo
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		stop
		start
		;;
	status)
		status $DNSPROXY
		RETVAL=$?
		;;
	*)
		echo $"Usage: $0 {start|stop|restart|reload|condrestart|status}"
		RETVAL=1
esac
exit $RETVAL
