#!/bin/bash
#
#       /etc/init.d/bamboo_v4
#
# Starts the bamboo_v4 daemon
#

# Source function library.
. /etc/rc.d/init.d/functions

RETVAL=0
PIDFILE=/var/run/bamboo/bamboo_v4.pid
process_no=-1
check_previous=""

BAMBOO_SHUTDOWN_TIMEOUT=5

start() {
        #Check if it is already running
        check_previous=`ps ax |grep -c "/bamboo_v4/bin/"`
        if [ $check_previous == 1 ]; then
                echo -n $"Starting bamboo_v4: "
                daemon --user=nobody /opt/bamboo_v4/bin/run-java bamboo.lss.DustDevil /opt/gateway_v4.cfg 2>>/var/log/bamboo_v4 #3>>/var/log/bamboo_v4 1>>/var/log/bamboo_v4
                RETVAL=$?
        else
                echo -n $"Bamboo_v4 daemon is already running:"
        fi

        echo
        return $RETVAL
}

stop() {
        echo -n $"Stopping bamboo_v4: "
        timeout=0
        RETVAL=1
        process_no=`cat /var/run/bamboo/bamboo_v4.pid` && kill $process_no 2>/dev/null && \
        while /bin/ps  -p ${process_no} >/dev/null; do
                if [ $timeout -ge $BAMBOO_SHUTDOWN_TIMEOUT ]; then
                        RETVAL=1
                        break
                else
                        sleep 2 && echo -n "."
                        timeout=$((timeout+2))
                fi;
        done && RETVAL=0
        if [ $RETVAL -eq 0 ]; then
                echo "" > /var/run/bamboo/bamboo_v4.pid
                success
        else
                failure
                RETVAL=1
        fi;
        echo
        return $RETVAL
}

restart() {
        stop
        start
}

reload() {
        trap "" SIGHUP
        action $"Reloading bamboo_v4 daemon:" killall -HUP XXX
        RETVAL=$?
        return $RETVAL
}

case "$1" in
start)
        start
        ;;
stop)
        stop
        ;;
reload)
        #reload
        echo "$0: Unimplemented feature."
        RETVAL=4
        ;;
force-reload)
        echo "$0: Unimplemented feature."
        RETVAL=3
        ;;
restart)
        restart
        ;;
condrestart)
        #if [ -f /var/lock/subsys/acpid ]; then
        #    restart
        #fi
        echo "$0: Unimplemented feature."
        RETVAL=5
        ;;
status)
        #status acpid
        #RETVAL=$?
        echo "$0: Unimplemented feature."
        RETVAL=6
        ;;
*)
        echo $"Usage: $0 {start|stop|restart}"
        RETVAL=2
esac

exit $RETVAL

