#!/bin/sh
#
# Init file for hip dns proxy
#
# description: HIP DNS proxy
#
# processname: dnsproxy.py
# pidfile: /var/run/dnsproxy.pid
# chkconfig: 2345 21 79

DNSPROXY_OPTS="-bk"
PID_FILE=/var/run/hipdnsproxy.pid
EXEC=/usr/sbin/hipdnsproxy

export PATH=/usr/sbin:$PATH

set -e

test -x $EXEC || exit 0

if test -f /etc/default/dnsproxy; then
    . /etc/default/dnsproxy
fi

start_dnsproxy() {
	start-stop-daemon --start --quiet --exec $EXEC -- $DNSPROXY_OPTS
}

stop_dnsproxy() {
	start-stop-daemon --stop --pidfile $PID_FILE --quiet -- $DNSPROXY_OPTS
}

case "$1" in
  start)
        echo -n "Starting hip dnsproxy"
	start_dnsproxy
        echo "."
	;;
  stop)
        echo -n "Stopping hip dnsproxy"
	stop_dnsproxy
        echo "."
	;;

  restart)
        echo -n "Restarting hip dnsproxy"
	stop_dnsproxy
	sleep 3
	start_dnsproxy
	echo "."
	;;

  *)
	echo "Usage: /etc/init.d/dnsproxy {start|stop|reload|force-reload|restart}"
	exit 1
esac

exit 0
